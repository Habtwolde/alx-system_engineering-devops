#!/bin/bash

# Update the hosts file to map localhost to 127.0.0.2
echo "127.0.0.2 localhost" | sudo tee -a /etc/hosts > /dev/null

# Update the DNS resolver configuration to use 8.8.8.8 for facebook.com
echo "nameserver 8.8.8.8" | sudo tee /etc/resolv.conf > /dev/null
echo "zone facebook.com { type forward; forwarders { 8.8.8.8; }; };" | sudo tee /etc/bind/named.conf.local > /dev/null
sudo service bind9 restart

# Restart the networking service to apply the changes
sudo service networking restart
